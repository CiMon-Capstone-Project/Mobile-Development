<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CiMonChiliMonitoring" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Material 3 Status bar color. -->
        <item name="colorAccent">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="colorSecondaryContainer">@color/green</item>
        <item name="android:navigationBarColor">@color/light_green</item>
        <item name="titleTextColor">@color/black</item>
        <item name="fontFamily">@font/plus_jakarta_sans</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@android:color/transparent</item>
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <!-- No ActionBar -->
    <style name="Theme.CiMonChiliMonitoring.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- others modifier -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CiMonChiliMonitoring.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CiMonChiliMonitoring.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>